{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomUtilisateur</th>
                <th>MotDePasse</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Age</th>
                <th>Email</th>
                <th>Moyenne</th>
                <th>Salaire</th>
                <th>Role</th>
                <th>Metier</th>
                <th>Status</th>
                <th>Code</th>
                <th>IdClass</th>
                <th>Img</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.nomUtilisateur }}</td>
                <td>{{ user.motDePasse }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.age }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.moyenne }}</td>
                <td>{{ user.salaire }}</td>
                <td>{{ user.role }}</td>
                <td>{{ user.metier }}</td>
                <td>{{ user.status }}</td>
                <td>{{ user.code }}</td>
                <td>{{ user.idClass }}</td>
                <td>{{ user.img }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="16">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>
{% endblock %}
