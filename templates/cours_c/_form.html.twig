                        {{ form_start(form) }}


                <div class="col-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Add new course </h4>
                            <p class="card-description"> Please fill all the labels </p>





                                <div class="form-group">
                                    <label for="exampleInputName1"> Course Name</label>

                                    {{ form_widget(form.nom_cours,{ 'attr' : {'class' : 'form-control'}}) }}

                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail3">Domain</label>
                                    {{ form_widget(form.domaine,{ 'attr' : {'class' : 'form-control'}}) }}
                                </div>

                                <div class="form-group">
                                    <label>Photo link</label>
                                    <input type="file" name="img[]" class="file-upload-default">
                                    <div class="input-group col-xs-12">

                                        {{ form_widget(form.lien,{ 'attr' : {'class' : 'form-control file-upload-info'}}) }}
                                        <span class="input-group-append">
                            <button class="file-upload-browse btn btn-gradient-primary" type="button">Upload</button>
                          </span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>Word link</label>
                                    <input type="file" name="img[]" class="file-upload-default">
                                    <div class="input-group col-xs-12">

                                        {{ form_widget(form.lien2,{ 'attr' : {'class' : 'form-control file-upload-info'}}) }}
                                        <span class="input-group-append">
                            <button class="file-upload-browse btn btn-gradient-primary" type="button">Upload</button>
                          </span>
                                    </div>
                                </div>


                                {% if  errors is empty %}
                                {% else %}
                                {% for error in errors %}
                                    <div class="  error-message  form-group">
                                    <i class="fa fa-warning"></i>
                                    {{ error.message }}
                            </div>
                                {% endfor %}
                                {% endif %}









                                <button type="submit" class="btn btn-gradient-primary mr-2">{{ button_label|default('Save') }}</button>
                                <button class="btn btn-light">Cancel</button>

                        </div>
                    </div>
                </div>









                {{ form_end(form) }}




