{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <h1>Blog</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ blog.nom }}</td>
            </tr>
            <tr>
                <th>Nom_admin</th>
                <td>{{ blog.nomAdmin }}</td>
            </tr>
            <tr>
                <th>Date_postule</th>
                <td>{{ blog.datePostule ? blog.datePostule|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ blog.description }}</td>
            </tr>
            <tr>
                <th>Img</th>
                <td>{{ blog.img }}</td>
