<section class="contact-area ptb-100">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7 col-md-12">
                <div class="contact-form">
                    <div id="contactForm">
                    <h3>What do you complaint about?</h3>
                    {{ form_start(form) }}
                        <div class="row">
                            <div class="col-lg-12 col-md-6">
                                <div class="form-group">
                                    {{ form_widget(form.telephone,{ 'attr' : {'class' : 'form-control' , 'placeholder' : 'Write your telephone'} }) }}
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-6">
                                <div class="form-group">
                                    {{ form_widget(form.email,{ 'attr' : {'class' : 'form-control' , 'placeholder' : 'Write your email'} }) }}

                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12">
                                <div class="form-group">

                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12">
                                <div class="form-group">
                                    {{ form_widget(form.type,{ 'attr' : {'class' : 'form-control' , 'placeholder' : 'Write your type'} }) }}
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12">
                                <div class="form-group">

                                          {{ form_widget(form.contenu,{ 'attr' : {'class' : 'form-control','placeholder' : 'Write your content' } }) }}


                                        {% if  errors is empty %}
                                        {% else %}
                                    <div class="help-block with-errors">
                                        {% for  error in errors %}
                                            <div class="  error-message  form-group">
                                                <i class="fa fa-warning"></i>

                                                {{ error.message}}
                                            </div>
                                    </div>
                                            {% endfor %}

                                        {% endif %}

                                    </div>

                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12">
                                <button type="submit" class="default-btn">Send Message</button>
                                <div id="msgSubmit" class="h3 text-center hidden"></div>
                                <div class="clearfix"></div>  {{ form_end(form) }}
                            </div>

                    </div>

                </div>
            </div>
            <div class="col-lg-5 col-md-12">
                <div class="contact-information">
                    <h3>Opening Hours:</h3>
                    <ul class="opening-hours">
                        <li><span>Monday:</span> 8AM - 6AM</li>
                        <li><span>Tuesday:</span> 8AM - 6AM</li>
                        <li><span>Wednesday:</span> 8AM - 6AM</li>
                        <li><span>Thursday:</span> 8AM - 6AM</li>
                        <li><span>Friday:</span> Closed</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

</section>
