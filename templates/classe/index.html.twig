            </tr>
        </thead>
        <tbody>
        {% for classe in classes %}
            <tr>
                <td>{{ classe.id }}</td>
                <td>{{ classe.nomClass }}</td>
                <td>{{ classe.age }}</td>
                <td>

                    <a href="{{ path('classe_edit', {'id': classe.id}) }}" class="btn btn-gradient-success btn-rounded btn-fw">edit</a>

                </td>
                <td>   {{ include('classe/_delete_form.html.twig') }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
                </div>
            </div>
        </div>
