{% block title %}Classe form{% endblock %}
{% block body %}
    {{ include('cours_c/nav.html.twig') }}

    <style>
        @import url('//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css');
        .error-message {

            color: #D8000C;
            background-color: #FFD2D2;

        }

        .isa_info i, .isa_success i, .isa_warning i, .error-message  {
            margin:10px 22px;
            font-size:1em;
            vertical-align:middle;
        }


        .isa_info, .isa_success, .isa_warning, .error-message {
            margin: 10px 0px;
            padding: 12px;
        }


    </style>

    {{ form_start(form) }}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            {% if button_label == 'Add' %}
                <h4 class="card-title">Add new Class </h4>
                <p class="card-description"> Please fill all the labels </p>
            {% else %}
                <h4 class="card-title">Update Class</h4>
                <p class="card-description"> Please fill all the labels </p>
            {% endif %}






            <div class="form-group">
                <label for="exampleInputName1"> Class Name</label>

                {{ form_widget(form.nom_class,{ 'attr' : {'class' : 'form-control'}}) }}

            </div>
            <div class="form-group">
                <label for="exampleInputEmail3">Age</label>
                {{ form_widget(form.age,{ 'attr' : {'class' : 'form-control'}}) }}
            </div>

            <div class="form-group">
                <label for="exampleInputEmail3">Teacher id</label>
                {{ form_widget(form.id_utilisateur,{ 'attr' : {'class' : 'form-control'}}) }}
            </div>

            <button type="submit" class="btn btn-gradient-primary mr-2">{{ button_label|default('Add') }}</button>
            <button class="btn btn-light">Cancel</button>

            {% if  errors is empty %}
            {% else %}
                {% for error in errors %}
                    <div class="  error-message  form-group">
                        <i class="fa fa-warning"></i>
                        {{ error.message }}
                    </div>
                {% endfor %}
            {% endif %}
            {{ form_end(form) }}










        </div>
    </div>
</div>



