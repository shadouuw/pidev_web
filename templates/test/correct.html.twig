
{% extends 'base.html.twig' %}
{% block title %} {% endblock %}
{% block body %}

    {{ include('cours_c/nav.html.twig') }}
    <style>
        @import url('//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css');
        .error-message {

            color: #D8000C;
            background-color: #FFD2D2;

        }

        .isa_info i, .isa_success i, .isa_warning i, .error-message  {
            margin:10px 22px;
            font-size:1em;
            vertical-align:middle;
        }


        .isa_info, .isa_success, .isa_warning, .error-message {
            margin: 10px 0px;
            padding: 12px;
        }


    </style>

    {{ form_start(form) }}


    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Test  </h4>
                <p class="card-description"> Please correct carefully  </p>

                <div class="form-group">
                    <label for="exampleInputName1"> {{ t.question1 }} :  </label>

                    <label for="exampleInputName1"> {{ t.reponse1 }}  </label>

                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">{{ t.question2 }} : </label>
                    <label for="exampleInputName1"> {{ t.reponse2 }}  </label>
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail3">{{ t.question3 }} :</label>
                    <label for="exampleInputName1"> {{ t.reponse3 }}  </label>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">{{ t.question4 }} :</label>
                    <label for="exampleInputName1"> {{ t.reponse4 }}  </label>
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail3">{{ t.question5 }} :</label>
                    <label for="exampleInputName1"> {{ t.reponse5 }}  </label>
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail3">Final mark :  </label>
                    {{ form_widget(form.note,{ 'attr' : {'class' : 'form-control'}}) }}
                </div>




                <button type="submit" class="btn btn-gradient-primary mr-2">{{ button_label|default('Save') }}</button>
                <button class="btn btn-light">Cancel</button>

            </div>

            {% if  errors is empty %}
            {% else %}

                <div class="  error-message  form-group">
                    <i class="fa fa-warning"></i>
                    {{ errors}}
                </div>

            {% endif %}
        </div>
    </div>









    {{ form_end(form) }}




    <!-- content-wrapper ends -->
    <!-- partial:partials/_footer.html -->

    <!-- partial -->
    </div>
    <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
    </div>
