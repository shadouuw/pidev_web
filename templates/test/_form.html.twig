
{% extends 'base.html.twig' %}
{% block title %} {% endblock %}
{% block body %}

    {{ include('cours_c/nav.html.twig') }}
    <style>
        @import url('//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css');
        .error-message {

            color: #D8000C;
            background-color: #FFD2D2;

        }

        .isa_info i, .isa_success i, .isa_warning i, .error-message  {
            margin:10px 22px;
            font-size:1em;
            vertical-align:middle;
        }


        .isa_info, .isa_success, .isa_warning, .error-message {
            margin: 10px 0px;
            padding: 12px;
        }


    </style>

    {{ form_start(form) }}


                <div class="col-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Add new Test </h4>
                            <p class="card-description"> Please fill all the labels </p>

                            <div class="form-group">
                                <label for="exampleInputName1"> Question 1 :</label>

                                {{ form_widget(form.question1,{ 'attr' : {'class' : 'form-control'}}) }}

                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail3">Question 2 :</label>
                                {{ form_widget(form.question2,{ 'attr' : {'class' : 'form-control'}}) }}
                            </div>

                            <div class="form-group">
                                <label for="exampleInputEmail3">Question 3 :</label>
                                {{ form_widget(form.question3,{ 'attr' : {'class' : 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail3">Question 4 :</label>
                                {{ form_widget(form.question4,{ 'attr' : {'class' : 'form-control'}}) }}
                            </div>

                            <div class="form-group">
                                <label for="exampleInputEmail3">Question 5 :</label>
                                {{ form_widget(form.question5,{ 'attr' : {'class' : 'form-control'}}) }}
                            </div>

                            <div class="form-group">
                                <label for="exampleInputEmail3">Time:</label>
                                {{ form_widget(form.temps,{ 'attr' : {'class' : 'event-date'}}) }}
                            </div>




                            <button type="submit" class="btn btn-gradient-primary mr-2">{{ button_label|default('Save') }}</button>
                            <button class="btn btn-light">Cancel</button>

                        </div>

                        {% if  errors is empty %}
                        {% else %}

                                <div class="  error-message  form-group">
                                    <i class="fa fa-warning"></i>
                                    {{ errors}}
                                </div>

                        {% endif %}
                    </div>
                </div>









                {{ form_end(form) }}




